pipeline {
    agent { 
        kubernetes{
            label 'jenkins-slave'
        }      
    }
    tool {
        terraform 'terraform'
    }
    environment{
        DOCKER_USERNAME = credentials('DOCKER_USERNAME')
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }
    stages {
        stage('docker login') {
            steps{
                sh(script: """
                    docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD
                """, returnStdout: true) 
            }
        }

        stage('git clone') {
            steps{
                sh(script: """
                    git clone https://github.com/wahaj123/Eks-terraform-jenkins.git
                """, returnStdout: true) 
            }
        }
        stage('deploy') {
            steps{
                sh script: '''
                #!/bin/bash
                cd Eks-terraform-jenkins
                terraform init
                terraform plan
                '''
            }
        }
    }
}